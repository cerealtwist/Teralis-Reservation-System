<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.teralis.utils.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Controllers -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>com.teralis.controller.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomController</servlet-name>
        <servlet-class>com.teralis.controller.RoomController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomController</servlet-name>
        <url-pattern>/api/rooms/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationController</servlet-name>
        <servlet-class>com.teralis.controller.ReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationController</servlet-name>
        <url-pattern>/api/reservations/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BuildingController</servlet-name>
        <servlet-class>com.teralis.controller.BuildingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuildingController</servlet-name>
        <url-pattern>/api/buildings/*</url-pattern>
    </servlet-mapping>

</web-app>
